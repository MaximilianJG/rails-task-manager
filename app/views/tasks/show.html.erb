<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<% if @task.completed %>
<p> This task is completed</p>
<% else %>
<p>This task is not completed yet</p>
<% end %>

<%= link_to 'See all tasks', tasks_path %>

<%= link_to 'Edit this task', edit_task_path(@task) %>

<%= link_to 'Delete this task', destroy_task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %>

